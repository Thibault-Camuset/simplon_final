{% extends 'base.html.twig' %}

{% block title %}Index{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    
    {% if is_granted('ROLE_USER') %}
        <h2>Bienvenue {{ app.user.nickname }}!</h2>
        <a href="{{ path('game_home') }}" class="btn btn-primary">Cliquer ici pour jouer!</a>
    {% else %}
        <h2>Déjà inscrit? Connectez-vous pour jouer!</h2>
        <a href="{{ path('app_login') }}" class="btn btn-primary">Se Connecter</a>
        <h2>Pas encore inscrit? Il vous suffit de vous inscrire pour jouer!</h2>
        <a href="{{ path('app_register') }}" class="btn btn-primary">S'inscrire</a>
    {% endif %}

</div>
{% endblock %}
