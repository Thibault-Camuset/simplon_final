{% extends 'base.html.twig' %}

{% block title %}Liste des quêtes!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h3>Quête "{{ quest.name }}" finie!</h3>
    <p>{{ character.name }} gagne <span class="badge badge-pill badge-warning">{{ quest.experience }} xp</span><p>
    <a href="{{ path('character_details', {'id': character.id, 'name' : character.name }) }}" class="btn btn-outline-primary">Revenir au personnage</a>


{% endblock %}
