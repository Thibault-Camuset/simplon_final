{% extends 'base.html.twig' %}

{% block title %}Prêt à jouer!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {% if save %}
        <p>Prêt à jouer {{ app.user.nickname }}!<p>
        {% if characters | length > 0 %}
        <div>
            {% for character in characters %}
                <a href="{{ path('character_details', {'id': character.id, 'name' : character.name }) }}" class="btn btn-outline-primary">{{ character.name }}, niveau {{ character.level }}</a>
            {% endfor %}
            </div>
        {% else %}
            <a class="btn btn-primary" href="{{ path('new_character') }}">Créer un nouveau personnage</a>
        {% endif %}
        <a href="{{ path('save_home') }}" class="btn btn-primary">Changer de sauvegarde</a>

    {% else %}
        <a href="{{ path('save_home') }}" class="btn btn-primary">Commencer à jouer</a>
        {# <p>{{ dump(app.session.get('saved_game')) }}</p> #}
    {% endif %}

</div>
{% endblock %}
