{% extends 'base.html.twig' %}

{% block title %}Prêt à jouer!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <p>{{ character.name }} combat un(e) {{ monster.name }}</p>
    <ul>
        {% for turn in result.turn %}
            <li>{{ turn.recap }} 
                {% if turn.monsterhp is defined %}
                    <span class="badge badge-rounded bg-danger">{{ turn.monsterhp }} HP</span>
                {% else %}
                    <span class="badge badge-rounded bg-success">{{ turn.characterhp }} HP</span>  
                {% endif %}
            </li>
        {% endfor %} 
    </ul>
    <p>{{ result.recap.message }} {% if result.recap.xp is defined %}<span class="badge badge-rounded bg-warning">{{ result.recap.xp }} xp</span>{% endif %}</p>

    <a href="{{ path('character_details', {'id': character.id, 'name' : character.name }) }}" class="btn btn-primary">Retour</a>

</div>
{% endblock %}
