{% extends 'base.html.twig' %}

{% block title %}Index{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    
    <h1>Créer une nouvelle partie</h1>

    <form action="{{ path('save_created') }}" method="GET">
        <input name="save-name" type="text" placeholder="Nom de la Sauvegarde"/>
        <p>Êtes vous sûr de commencer sur cette sauvegarde?</p>
        <input type="submit" class="btn btn-success" value="Oui"/>

    <a class="btn btn-danger" href="{{ path('game_home') }}">Non</a>

</div>
{% endblock %}
